<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomTabView">
        <attr name="bottom_labels" format="reference" />
        <attr name="tab_res_ids" format="reference" />
        <attr name="tab_select_background" format="reference|color" />
        <attr name="tab_unSelect_background" format="reference|color" />
        <attr name="tab_indicator_drawable" format="reference|color" />
        <attr name="tab_textColor_selector" format="reference" />
        <attr name="tab_text_size" format="dimension" />
        <attr name="tab_horizontal_divider" format="reference|color" />
        <attr name="tab_divider_width" format="dimension" />
        <attr name="tab_drawable_padding" format="dimension" />
        <attr name="tab_indicator_margin_top" format="dimension" />
        <attr name="tab_indicator_margin_bottom" format="dimension" />
        <attr name="tab_indicator_margin_left" format="dimension" />
        <attr name="tab_indicator_margin_rigth" format="dimension" />
        <attr name="tab_count" format="integer" />
    </declare-styleable>

    <!--bottom tab id-->
    <item name="tab" type="id"/>
    <item name="indicator" type="id"/>

    <declare-styleable name="PtrFrameLayout">
        <!-- Optional. If you put header and content in xml, you can you these to specify them. -->
        <attr name="ptr_header" format="reference" />
        <attr name="ptr_content" format="reference" />

        <!-- the resistance when you are moving the frame -->
        <attr name="ptr_resistance" format="float" />

        <!-- the ration of the height of the header to trigger refresh -->
        <attr name="ptr_ratio_of_header_height_to_refresh" format="float" />

        <attr name="ptr_duration_to_close" format="integer" />
        <attr name="ptr_duration_to_close_header" format="integer" />

        <!-- pull to refresh, otherwise release to refresh, default is release to refresh -->
        <attr name="ptr_pull_to_fresh" format="boolean" />

        <!-- keep header when refreshing-->
        <attr name="ptr_keep_header_when_refresh" format="boolean" />
        <!-- enable or disable refresh-->
        <attr name="ptr_refresh_enable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PtrClassicHeader">
        <attr name="ptr_rotate_ani_time" format="integer" />
    </declare-styleable>
    
</resources>