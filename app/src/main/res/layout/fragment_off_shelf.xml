<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_fouce_house" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/bg"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="请选择撤下旺铺的原因"
            android:textColor="#999999"
            android:textSize="12sp" />

        <ListView
            android:id="@+id/mListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@color/divider_color"
            android:dividerHeight="@dimen/divider_height"
            android:paddingLeft="15dp"
            android:scrollbars="none" />

        <RelativeLayout
            android:id="@+id/rl_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:minHeight="108dp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginLeft="15dp"
                android:background="@color/divider_color" />

            <EditText
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_toLeftOf="@+id/clear"
                android:background="#ffffff"
                android:gravity="top"
                android:hint="请输入其他信息"
                android:minHeight="76dp"
                android:paddingLeft="15dp"
                android:paddingRight="14dp"
                android:paddingTop="10dp"
                android:textColor="#9b9b9b"
                android:textColorHint="#999999"
                android:textSize="13sp"
                tools:text="请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入请输入其他信息请输入" />

            <ImageView
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="14dp"
                android:src="@mipmap/icon_remark_clear"
                android:visibility="gone" />

            <TextView
                android:id="@+id/remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/other"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:textColor="#D2D2D2"
                android:textSize="12sp"
                tools:text="0/200字" />
        </RelativeLayout>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_shape_r_orange"
            android:gravity="center"
            android:text="确认撤下旺铺"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>