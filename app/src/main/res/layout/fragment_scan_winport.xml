<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <include layout="@layout/title_fouce_house" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_top_bottom_divider"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/list_winport_tip"
        android:textColor="#333333"
        android:textSize="13sp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.finance.winport.view.refreshview.PtrClassicFrameLayout
            android:id="@+id/refresh_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ptr:ptr_duration_to_close_header="2000"
            ptr:ptr_keep_header_when_refresh="true"
            ptr:ptr_pull_to_fresh="false"
            ptr:ptr_ratio_of_header_height_to_refresh="1.2"
            ptr:ptr_resistance="1.7">

            <ListView
                android:id="@+id/mListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:scrollbarStyle="outsideOverlay" />
        </com.finance.winport.view.refreshview.PtrClassicFrameLayout>

        <RelativeLayout
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_top_divider"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/confirm"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="20dp"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    tools:drawableTop="@mipmap/icon_empty_scan"
                    tools:text="还木有旺铺浏览记录哟~" />
            </LinearLayout>

            <TextView
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="65dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_shape_r_orange"
                android:gravity="center"
                android:text="去找旺铺"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>