<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/post_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:text="好的主题，是成功的一半"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <GridLayout
            android:id="@+id/grid_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:columnCount="3"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:rowCount="1">

            <ImageView
                android:layout_columnWeight="1"
                android:src="@mipmap/icon_peer" />

            <ImageView
                android:layout_columnWeight="1"
                android:src="@mipmap/icon_transfer" />

            <ImageView
                android:layout_columnWeight="1"
                android:src="@mipmap/icon_teasing" />
        </GridLayout>

        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_top"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="50dp"
            android:text="精美的图片才能更吸引人"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <GridLayout
            android:id="@+id/grid_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/center"
            android:columnCount="3"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:rowCount="1">

            <ImageView
                android:layout_columnWeight="1"
                android:src="@mipmap/icon_photo" />

            <ImageView
                android:layout_columnWeight="1"
                android:src="@mipmap/icon_clear" />

            <ImageView
                android:layout_columnWeight="1"
                android:src="@mipmap/icon_composition" />
        </GridLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp"
            android:src="@drawable/btn_close" />
    </RelativeLayout>
</LinearLayout>