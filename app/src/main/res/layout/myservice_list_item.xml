<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_press_shop_list"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp">
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/vertical_line"
                android:drawablePadding="10dp"
                android:text="旺铺寻租"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:text="日程已撤销"
                android:textColor="#999999"
                android:textSize="12sp" />

        </RelativeLayout>


        <View
            android:id="@+id/bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#e5e5e5" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:text="徐汇区徐虹北路11号1-1室"
            android:drawableLeft="@mipmap/icon_map_schedule"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="14sp" />

        <View
            android:id="@+id/bottom_divider1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#e5e5e5" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@mipmap/icon_time_schedule"
            android:drawablePadding="10dp"
            android:text="2017.04.05 17:22:22 申请"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center_vertical"/>


    </LinearLayout>
</LinearLayout>