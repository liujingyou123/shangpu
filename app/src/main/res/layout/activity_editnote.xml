<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/title_fouce_house" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:paddingLeft="15dp">

                        <EditText
                            android:id="@+id/et_title"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="#00000000"
                            android:gravity="center_vertical"
                            android:hint="请输入帖子标题"
                            android:maxLength="20"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:textSize="14sp" />

                        <View style="@style/view_line" />

                        <!-- 其他 -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:orientation="vertical"
                            android:paddingTop="15dp">

                            <EditText
                                android:id="@+id/et_else"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:background="#00000000"
                                android:gravity="left|top"
                                android:hint="请输入帖子内容"
                                android:maxLength="200"
                                android:textColor="#333333"
                                android:textColorHint="#999999"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@id/et_else"
                                android:layout_marginBottom="15dp"
                                android:layout_marginRight="15dp"
                                android:text="0/200字"
                                android:textColor="#999999"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_photo_num"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="选择图片（0/9）"
                        android:textColor="#FF333333"
                        android:textSize="14sp" />

                    <com.finance.winport.view.tagview.TagCloudLayout
                        android:id="@+id/gv_photos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:padding="15dp"
                        apps:lineSpacing="7dp"
                        apps:tagSpacing="7dp"></com.finance.winport.view.tagview.TagCloudLayout>

                    <TextView
                        android:id="@+id/btn_done"
                        style="@style/btn_done"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="30dp"
                        android:text="发布" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e6000000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="45dp"
                android:gravity="center_horizontal"
                android:text="发帖秘籍"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <RelativeLayout
                android:id="@+id/post_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="26dp"
                    android:text="好的主题，是成功的一半"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <GridLayout
                    android:id="@+id/grid_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top"
                    android:columnCount="3"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:rowCount="1">

                    <ImageView
                        android:layout_columnWeight="1"
                        android:src="@mipmap/icon_peer" />

                    <ImageView
                        android:layout_columnWeight="1"
                        android:src="@mipmap/icon_transfer" />

                    <ImageView
                        android:layout_columnWeight="1"
                        android:src="@mipmap/icon_teasing" />
                </GridLayout>

                <TextView
                    android:id="@+id/center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/grid_top"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="26dp"
                    android:layout_marginTop="50dp"
                    android:text="精美的图片才能更吸引人"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <GridLayout
                    android:id="@+id/grid_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/center"
                    android:columnCount="3"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:rowCount="1">

                    <ImageView
                        android:layout_columnWeight="1"
                        android:src="@mipmap/icon_photo" />

                    <ImageView
                        android:layout_columnWeight="1"
                        android:src="@mipmap/icon_clear" />

                    <ImageView
                        android:layout_columnWeight="1"
                        android:src="@mipmap/icon_composition" />
                </GridLayout>

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/grid_bottom"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="78dp"
                    android:src="@mipmap/btn_colse" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>