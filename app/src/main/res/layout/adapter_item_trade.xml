<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_press_shop_list"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imv_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/business_icon_top"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"/>
    </LinearLayout>


    <!-- 文字 超链接-->

    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textColor="#FF666666"
        android:textSize="14sp"
        android:lineSpacingExtra="5dp"
        android:maxHeight="90dp"
        android:ellipsize="end"
        android:maxLines="4"/>

    <RelativeLayout
        android:id="@+id/rl_href"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#FFF2F2F2">

        <ImageView
            android:id="@+id/imv_href"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7.5dp" />

        <TextView
            android:id="@+id/tv_href_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/imv_href"
            android:text=""
            android:textColor="#FF333333"
            android:textSize="14sp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tv_href_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_href_title"
            android:layout_below="@id/tv_href_title"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="#FF999999"
            android:textSize="12sp"
            android:singleLine="true"/>
    </RelativeLayout>

    <!-- 图片 -->
    <android.support.v7.widget.GridLayout
        android:id="@+id/gl_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="6分钟前发布"
            android:textColor="#FF999999"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/bg_zan"
                android:drawablePadding="3dp"
                android:text="34600"
                android:textColor="@color/bg_zan"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/business_icon_comments"
                android:drawablePadding="3dp"
                android:text="34600"
                android:textColor="#999999"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/imv_del"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/business_icon_del" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>