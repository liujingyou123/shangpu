<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/title_fouce_house" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/oldPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13888888888"
            android:textColor="#999999"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <EditText
            android:id="@+id/phone_view"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@+id/headImg"
            android:background="@drawable/bg_bottom_divider"
            android:hint="请输入新的手机号"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/image_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_view"
            android:background="@drawable/bg_bottom_divider"
            android:gravity="center_vertical"
            android:visibility="gone">


            <EditText
                android:id="@+id/verify_code_view_image"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="填定图片验证码"
                android:inputType="number"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/pic_code"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_verify_code"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/verify_code_view"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="填写收到的验证码"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <com.finance.winport.view.CountDownButton
                android:id="@+id/countDown"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/color_count_down_btn_selector"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/save"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_done"
        android:text="确认修改手机号码"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="修改成功后,下次登录可使用新手机号登录"
        android:textColor="#999999"
        android:textSize="12sp" />
</LinearLayout>