<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_underline">

        <ImageView
            android:id="@+id/iv_header_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/default_user_small" />

        <TextView
            android:id="@+id/tv_header_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/iv_header_icon"
            android:text=""
            android:textColor="#FF333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_header_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_header_phone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7.5dp"
            android:layout_toRightOf="@id/iv_header_icon"
            android:text=""
            android:textColor="#FF999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_header_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:text="6分钟前发布"
            android:textColor="#999999"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="16sp"
            tools:text="魔都最火的10间商铺" />
        <WebView
            android:id="@+id/content"
            android:layout_below="@+id/title"
            android:layout_marginBottom="15dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--<com.finance.winport.view.HtmlTextView-->
            <!--android:id="@+id/content"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/title"-->
            <!--android:layout_marginBottom="15dp"-->
            <!--android:textColor="#666666"-->
            <!--android:textSize="16sp"-->
            <!--tools:text="金铺多成立于2017年4月，是金铺多集团旗下的国内首家专业商业地产网站，专注于商业地产信息服是金铺多集团旗下的国内首家专业商业地产网站，专注于商业地产信息服" />-->

        <LinearLayout
            android:id="@+id/img_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_href"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#FFF2F2F2"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imv_href"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7.5dp" />

                <TextView
                    android:id="@+id/tv_href_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@id/imv_href"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#FF333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_href_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_href_title"
                    android:layout_below="@id/tv_href_title"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#FF999999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <android.support.v7.widget.GridLayout
                android:id="@+id/gl_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="@dimen/divider_height"
            android:layout_height="12dp"
            android:layout_alignBottom="@+id/comment_count"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/comment_count"
            android:background="@color/divider_color" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_underline"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="22.5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="最新评论"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/vertical_line"
            android:drawablePadding="10dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/top"
            android:layout_alignTop="@+id/top"
            android:scaleType="centerInside"
            android:src="@mipmap/business_icon_del"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>