<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@mipmap/send_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imv_focus_house_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_white_back" />


                    <TextView
                        android:id="@+id/tv_focus_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_focus_house"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="找资金"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="237dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="110dp"
                            android:layout_height="0.5dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:background="#e5e5e5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:text="服务项目"
                            android:textColor="#333333"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="110dp"
                            android:layout_height="0.5dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:background="#e5e5e5" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/shop_img"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="25dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/send_rent_icon1" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/shop_img"
                            android:text="确认需求"
                            android:textColor="#333333"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/address"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@+id/shop_img"
                            android:text="小二将致电您确认贷款需求"
                            android:textColor="#999999"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/shop_img1"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="25dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/send_rent_icon2" />

                        <TextView
                            android:id="@+id/address1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/shop_img1"
                            android:text="核实信息"
                            android:textColor="#333333"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/address1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@+id/shop_img1"
                            android:text="小二将线下约见您，核实身份及申请信息"
                            android:textColor="#999999"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/shop_img2"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="25dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/send_loan_icon1" />

                        <TextView
                            android:id="@+id/address2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/shop_img2"
                            android:text="协助办理"
                            android:textColor="#333333"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/address2"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@+id/shop_img2"
                            android:text="指导协助进行贷款办理，签署协议并放款"
                            android:textColor="#999999"
                            android:textSize="14sp" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="267dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phone_view"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical">

                        <com.finance.winport.view.HeaderTextView
                            android:id="@+id/input_loan_money"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            app:content_background="#00000000"
                            app:content_height="match_parent"
                            app:content_width="match_parent"
                            app:editable="true"
                            app:header_text="贷款额度"
                            app:header_text_size="15sp"
                            app:header_width="85dp"
                            app:text_hint="请输入贷款金额"
                            app:text_hint_color="#969696"
                            app:text_size="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="万元"
                            android:textSize="14sp"
                            android:textColor="#333333"/>
                    </LinearLayout>
                    <com.finance.winport.view.HeaderTextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        app:content_background="#00000000"
                        app:content_height="match_parent"
                        app:content_padding_right="15dp"
                        app:content_width="match_parent"
                        app:editable="false"
                        app:header_text="贷款期限"
                        app:header_text_size="15sp"
                        app:header_width="85dp"
                        app:htv_divider_color="@color/color_line"
                        app:htv_divider_stretch="false"
                        app:htv_divider_visible="true"
                        app:htv_drawable_right="@mipmap/arrow"
                        app:text_hint="请选择期限"
                        app:text_hint_color="#969696"
                        app:text_size="15sp" />

                    <com.finance.winport.view.HeaderTextView
                        android:id="@+id/name_view"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        app:content_background="#00000000"
                        app:content_height="match_parent"
                        app:content_width="match_parent"
                        app:editable="true"
                        app:header_text="联系人"
                        app:header_text_size="15sp"
                        app:header_width="85dp"
                        app:htv_divider_color="@color/color_line"
                        app:htv_divider_stretch="false"
                        app:htv_divider_visible="true"
                        app:text_hint="请输入您的手机号"
                        app:text_hint_color="#969696"
                        app:text_size="15sp" />

                    <com.finance.winport.view.HeaderTextView
                        android:id="@+id/phone_view"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        app:content_background="#00000000"
                        app:content_height="match_parent"
                        app:content_width="match_parent"
                        app:editable="true"
                        app:header_text="联系电话"
                        app:header_text_size="15sp"
                        app:header_width="85dp"
                        app:htv_divider_color="@color/color_line"
                        app:htv_divider_stretch="false"
                        app:htv_divider_visible="true"
                        app:text_hint="请输入您的手机号"
                        app:text_hint_color="#969696"
                        app:text_size="15sp" />

                    <LinearLayout
                        android:id="@+id/ll_verify_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phone_view"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical">

                        <com.finance.winport.view.HeaderTextView
                            android:id="@+id/verify_code_view"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            app:content_background="#00000000"
                            app:content_height="match_parent"
                            app:content_width="match_parent"
                            app:editable="true"
                            app:header_text="验证码"
                            app:header_text_size="15sp"
                            app:header_width="85dp"
                            app:text_hint="请输入短信验证码"
                            app:text_hint_color="#969696"
                            app:text_size="15sp" />

                        <com.finance.winport.view.CountDownButton
                            android:id="@+id/countDown"
                            style="?attr/borderlessButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/selector_button_bg"
                            android:gravity="center"
                            android:text="获取验证码"
                            android:textColor="#ffa73b"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_img_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phone_view"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical">

                        <com.finance.winport.view.HeaderTextView
                            android:id="@+id/img_code_view"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            app:content_background="#00000000"
                            app:content_height="match_parent"
                            app:content_width="match_parent"
                            app:editable="true"
                            app:header_text="图片验证"
                            app:header_text_size="15sp"
                            app:header_width="85dp"
                            app:text_hint="填写图片验证码"
                            app:text_hint_color="#969696"
                            app:text_size="15sp" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="34dp"
                            android:layout_marginRight="15dp"
                            android:background="#7e3456" />
                    </LinearLayout>

                    <com.finance.winport.view.HeaderTextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        app:content_background="#00000000"
                        app:content_height="match_parent"
                        app:content_padding_right="15dp"
                        app:content_width="match_parent"
                        app:editable="false"
                        app:header_text="约见时间"
                        app:header_text_size="15sp"
                        app:header_width="85dp"
                        app:htv_divider_color="@color/color_line"
                        app:htv_divider_stretch="false"
                        app:htv_divider_visible="false"
                        app:htv_drawable_right="@mipmap/arrow"
                        app:text_hint="选择约见时间"
                        app:text_hint_color="#969696"
                        app:text_size="15sp" />


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="小二将电话联系您，帮您匹配合适贷款机构"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffa73b"
            android:gravity="center"
            android:text="发布信息，帮我找贷款"
            android:textColor="#ffffff"
            android:textSize="15sp" />


    </LinearLayout>

</FrameLayout>
