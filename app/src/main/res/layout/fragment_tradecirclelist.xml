<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <TextView
        android:id="@+id/tv_comments_num"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="老板，有25位客官评论了您的帖子"
        android:textColor="#FFFF5851"
        android:textSize="13sp"
        android:background="@drawable/bg_comments_num"
        android:gravity="center"/>

    <com.finance.winport.view.refreshview.PtrClassicFrameLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptr_duration_to_close_header="2000"
        ptr:ptr_keep_header_when_refresh="true"
        ptr:ptr_pull_to_fresh="false"
        ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        ptr:ptr_resistance="1.7">

        <ListView
            android:id="@+id/ls_circles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:divider="@color/bg"
            android:dividerHeight="10dp"
            android:fadingEdge="none"
            android:scrollbars="none"/>
    </com.finance.winport.view.refreshview.PtrClassicFrameLayout>
</LinearLayout>