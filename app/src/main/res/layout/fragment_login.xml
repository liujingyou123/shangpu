<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/headImg"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_login_top" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_login_close" />

        <EditText
            android:id="@+id/phone_view"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@+id/headImg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:hint="输入手机号码"
            android:inputType="number"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/phone_view"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:id="@+id/image_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_view"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/verify_code_view_image"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入图片验证码"
                android:inputType="number"
                android:textColorHint="#999999"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/pic_code"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <View
            android:id="@+id/view_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/image_verify_code"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:id="@+id/ll_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_verify_code"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/verify_code_view"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入手机号码"
                android:inputType="number"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <com.finance.winport.view.CountDownButton
                android:id="@+id/countDown"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_count_down_btn_selector"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ll_verify_code"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#e5e5e5" />

        <EditText
            android:id="@+id/et_invite_code"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@+id/ll_verify_code"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:hint="邀请码（选填）"
            android:inputType="number"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <View
            android:id="@+id/view_line3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/et_invite_code"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#e5e5e5" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/et_invite_code"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_button_bg"
            android:enabled="true"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/selector_login_check"
                android:drawablePadding="8dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="我已经阅读并同意"
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/contact_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="《用户协议及隐私政策》条款"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>