<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="110dp"
            android:layout_height="82dp"
            android:background="#e5e5e5" />

        <View
            android:id="@+id/overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignLeft="@+id/img"
            android:layout_alignRight="@+id/img"
            android:layout_alignTop="@+id/img"
            android:background="#99000000"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignLeft="@+id/img"
            android:layout_alignRight="@+id/img"
            android:layout_alignTop="@+id/img"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_winport_off"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/img"
            android:layout_alignLeft="@+id/img"
            android:layout_alignRight="@+id/img"
            android:gravity="center">

            <TextView
                android:id="@+id/scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:drawableLeft="@mipmap/icon_scan"
                android:drawablePadding="3dp"
                android:textColor="#ffffff"
                android:textSize="11sp"
                tools:text="21980" />

            <TextView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_call"
                android:drawablePadding="3dp"
                android:textColor="#ffffff"
                android:textSize="11sp"
                tools:text="2390" />
        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/area"
            android:layout_toRightOf="@+id/img"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="15sp"
            tools:text="徐虹北路230号转租徐虹北路230号转租" />

        <TextView
            android:id="@+id/district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/address"
            android:layout_below="@+id/address"
            android:layout_marginRight="30dp"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="浦东新区 松江大学城…" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/address"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:textColor="#FF7540"
            android:textSize="12sp"
            tools:text="20000元/月" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/address"
            android:layout_below="@+id/district"
            android:layout_marginRight="30dp"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="11sp"
            tools:text="距您2.5km" />

        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/district"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:textColor="#999999"
            android:textSize="11sp"
            tools:text="转让费8万元" />


        <TextView
            android:id="@+id/update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignLeft="@+id/address"
            android:textColor="#999999"
            android:textSize="11sp"
            tools:text="2小时前发布" />

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#333333"
            tools:text="100㎡" />

        <View
            android:id="@+id/tag_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_alignLeft="@+id/tag"
            android:layout_below="@+id/img"
            android:layout_marginTop="15dp"
            android:background="@color/divider_color"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/tag"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_alignLeft="@+id/address"
            android:layout_below="@+id/tag_divider"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/appoint_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="left|center_vertical"
                android:textColor="#999999"
                android:textSize="13sp"
                tools:text="2015/02/06   21:30:00约看" />

            <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="14dp"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/sign"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:enabled="false"
                android:gravity="center"
                android:text="签约租铺"
                android:textColor="@color/color_appoint_selector"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg" />
</LinearLayout>