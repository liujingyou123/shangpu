<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f0f0f0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/loan_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="贷款额度"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/loan_money_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/loan_money"
                android:layout_below="@+id/loan_money"
                android:layout_marginTop="9dp"
                android:text="30万元"
                android:textColor="#ff5851"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/loan_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="109dp"
                android:layout_marginTop="15dp"
                android:text="贷款期限"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/loan_deadline_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/loan_deadline"
                android:layout_below="@+id/loan_deadline"
                android:layout_marginTop="9dp"
                android:text="12个月"
                android:textColor="#151515"
                android:textSize="18sp" />


        </RelativeLayout>

        <View
            android:id="@+id/bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="#e5e5e5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="2014/02/02   13:20:56 申请 | 已受理"
            android:textColor="#999999"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
</LinearLayout>