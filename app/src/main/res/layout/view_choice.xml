<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000" />

    <com.finance.winport.view.home.SelectView
        android:id="@+id/sl_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.finance.winport.view.home.SelectView>

    <LinearLayout
        android:id="@+id/ll_weizhi"
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_below="@id/sl_view"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_quyu"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="区域"
                android:textColor="@color/color_text_select"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_line"/>
            <TextView
                android:id="@+id/tv_ditie"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="地铁"
                android:textColor="@color/color_text_select"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_line"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_line"/>
        <ListView
            android:id="@+id/ls_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@color/color_line"
            android:dividerHeight="0.5dp"
            android:scrollbars="none"></ListView>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_line"/>
        <ListView
            android:id="@+id/ls_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@color/color_line"
            android:dividerHeight="0.5dp"
            android:scrollbars="none"></ListView>
    </LinearLayout>
</RelativeLayout>