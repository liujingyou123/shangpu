<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imv_cover"
        android:layout_width="110dp"
        android:layout_height="83dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_orange_light" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="left|center_vertical"
        android:text="45㎡"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="45㎡" />

    <TextView
        android:id="@+id/tv_shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:text="徐虹北路2300号转租"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/imv_cover"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="徐虹北路2300号转租" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="浦东新区 松江大学城"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_shopname"
        app:layout_constraintTop_toBottomOf="@+id/tv_shopname"
        tools:text="浦东新区 松江大学城"
        android:includeFontPadding="false"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="20000元/月"
        android:textColor="#ff7540"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        tools:text="20000元/月"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="距您2.5km"
        android:textColor="#999999"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:text="距您2.5km"
        android:includeFontPadding="false"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="转让费8万元"
        android:textColor="#999999"
        android:textSize="11sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        tools:text="转让费8万元"
        android:includeFontPadding="false" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="20分钟前更新"
        android:textColor="#BFBFBF"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:text="20分钟前更新"
        android:includeFontPadding="false"
        android:layout_marginLeft="0dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:orientation="vertical"
        android:visibility="gone">
        <View
            android:id="@+id/line_tv"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="#ffff00" />
        <com.finance.winport.view.tagview.TagCloudLayout
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/line_tv"
            app:layout_constraintTop_toBottomOf="@+id/line_tv" />
    </LinearLayout>

    <View
        android:visibility="gone"
        android:id="@+id/textView10"
        android:layout_width="368dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_line"
        app:layout_constraintLeft_toLeftOf="@+id/imv_cover"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


</android.support.constraint.ConstraintLayout>