<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_list_item"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="110dp"
            android:layout_height="82dp"
            android:background="@color/bg" />

        <FrameLayout
            android:id="@+id/fl_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignLeft="@+id/img"
            android:layout_alignRight="@+id/img"
            android:layout_alignTop="@+id/img"
            android:visibility="gone"
            android:background="@drawable/bg_mark_background">

            <ImageView
                android:id="@+id/mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_winport_off" />
        </FrameLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/area"
            android:layout_toRightOf="@+id/img"
            android:maxLines="2"
            android:textColor="@color/color_list_text_dark_selector"
            android:textSize="15sp"
            tools:text="徐虹北路230号转租徐虹北路230号转租" />

        <TextView
            android:id="@+id/history_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/address"
            android:layout_below="@+id/address"
            android:layout_marginTop="9dp"
            android:textColor="@color/color_list_text_light_selector"
            android:textSize="14sp"
            tools:text="历史带看申请20组" />

        <TextView
            android:id="@+id/scan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignLeft="@+id/address"
            android:textColor="@color/color_list_text_light_selector"
            android:textSize="12sp"
            tools:text="19802人/次浏览" />

        <TextView
            android:id="@+id/release_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_list_text_light_selector"
            android:textSize="12sp"
            tools:text="2小时前发布" />

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/color_list_text_dark_selector"
            tools:text="100㎡" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_color" />

        <LinearLayout
            android:id="@+id/ll_onSale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="联系小二"
                android:textColor="#666666"
                android:textSize="14sp" />

            <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="14dp"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/drop_off"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下架旺铺"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/release"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="联系小二重新发布"
            android:textColor="#FFA73B"
            android:textSize="14sp"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>