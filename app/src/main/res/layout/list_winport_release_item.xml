<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_list_item"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <com.finance.winport.view.roundview.RoundedImageView
                android:id="@+id/headImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@color/bg"
                app:oval="true" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/headImg"
                android:textColor="#333333"
                android:textSize="15sp"
                tools:text="黄老板" />

            <TextView
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/headImg"
                android:layout_alignLeft="@+id/name"
                android:text="为您代理此铺的租赁业务"
                android:textColor="#999999"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/divider_height"
            android:layout_alignLeft="@+id/top"
            android:layout_alignRight="@+id/top"
            android:layout_below="@+id/top"
            android:background="@color/divider_color" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="110dp"
            android:layout_height="82dp"
            android:layout_below="@+id/divider"
            android:layout_marginTop="15dp"
            android:background="@color/bg" />

        <FrameLayout
            android:id="@+id/fl_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignLeft="@+id/img"
            android:layout_alignRight="@+id/img"
            android:layout_alignTop="@+id/img"
            android:background="@drawable/bg_mark_background"
            android:visibility="gone">

            <TextView
                android:id="@+id/mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_winport_mark"
                android:gravity="center"
                android:textColor="#FF5851"
                android:textSize="13sp"
                tools:text="该旺铺已下架" />
        </FrameLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/area"
            android:layout_toRightOf="@+id/img"
            android:maxLines="2"
            android:textColor="@color/color_list_text_dark_selector"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="徐虹北路230号转租徐虹北路230号转租" />

        <TextView
            android:id="@+id/history_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/address"
            android:layout_below="@+id/address"
            android:layout_marginTop="9dp"
            android:textColor="@color/color_list_text_light_selector"
            android:textSize="14sp"
            tools:text="历史带看申请20组" />

        <TextView
            android:id="@+id/scan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignLeft="@+id/address"
            android:textColor="@color/color_list_text_light_selector"
            android:textSize="12sp"
            tools:text="@string/list_winport_tip_1" />

        <TextView
            android:id="@+id/release_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_list_text_light_selector"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="2小时前发布" />

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/address"
            android:textColor="@color/color_list_text_dark_selector"
            tools:text="100㎡" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_color" />

        <LinearLayout
            android:id="@+id/ll_onSale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="联系小二"
                android:textColor="#666666"
                android:textSize="14sp" />

            <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="14dp"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/drop_off"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="撤下旺铺"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/release"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="联系小二重新发布"
            android:textColor="#FFA73B"
            android:textSize="14sp"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>